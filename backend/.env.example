PORT=8000
NODE_ENV=development

# Database
MONGO_URI=mongodb://localhost:27017/edumathDB

# JWT (Use strong secrets!)
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_very_long_random_secret_here_at_least_64_chars
JWT_REFRESH_SECRET=another_very_long_random_secret_here

# CORS
# FRONTEND_URL is used by server.js to allow a single origin
FRONTEND_URL=http://localhost:5173
# Alternatively, list multiple origins (not used by server.js currently)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Auth-specific rate limiting (login/signup)
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=20

# Logging
LOG_LEVEL=info

# Password hashing
BCRYPT_ROUNDS=12